{
  "name": "lightscript-minimal-node",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "Minimal skeleton for a LightScript library or app running in Node.",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "jsnext:main": "lib/index.es.js",
  "files": ["lib"],
  "scripts": {
    "clean": "rimraf lib coverage .nyc_output",
    "build": "npm run build:rollup",
    "build:rollup": "rollup -c",
    "build:plain": "babel -x \".js\",\".lsc\" src --out-dir lib",
    "build:rollup:coverage": "cross-env COVERAGE=true rollup -c",
    "test": "npm run lint && npm run clean && npm run build && jest",
    "test:only": "jest",
    "test:debug": "node --inspect-brk $(npm bin)/jest -i --env jest-environment-node-debug",
    "coverage": "npm run clean && npm run build:rollup:coverage && jest --coverage",
    "lint": "eslint --ext .js,.lsc src",
    "preversion": "npm run test"
  },
  "devDependencies": {
    "@oigroup/babel-preset-lightscript": "^3.1.1",
    "@oigroup/lightscript-eslint": "^3.1.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.6",
    "cross-env": "^5.1.4",
    "eslint": "~4.8.0",
    "jest": "^21.2.1",
    "jest-environment-node-debug": "^2.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "lsc"
    ],
    "transform": {
      "\\.lsc$": "<rootDir>/lightscript.jest.js"
    },
    "testRegex": "(\\.|/)test\\.lsc$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  }
}
